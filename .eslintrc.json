{
  "plugins": ["jest", "@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "prettier/prettier": ["error", { "semi": false, "printWidth": 120 }]
  },
  "env": {
    "node": true,
    "es6": true,
    "jest/globals": true
  }
}
